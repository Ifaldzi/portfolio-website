<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./assets/css/tailwind.css">
    <link rel="stylesheet" href="./assets/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
        integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://unpkg.com/accordion-js@3.3.0/dist/accordion.min.css" />
    <title>Ifal's Portfolio</title>
</head>

<body class="bg-main overflow-auto">
    <%- include('navbar') %>

    <div class="md:mx-28">
        <div id="about" class="flex flex-col-reverse md:flex-row px-10 md:gap-4 gap-10 min-h-[calc(100vh-182px)]">
            <div class="pr-4 self-center basis-2/3">
                <p class="text-secondary text-xl">Hello, I am</p>
                <div class="flex md:text-6xl text-4xl text-primary gap-3 my-5">
                    <div class="">
                        <p>&gt;</p>
                    </div>
                    <div class="">
                        <p>Ifaldzi Alwi Hudhori</p>
                    </div>
                </div>
                <p class="text-secondary text-lg md:mr-8">I'm a <span class="font-bold">software engineer</span> who
                    focused on <span class="font-bold"> backend engineer</span> and interested on <span
                        class="font-bold">game development</span>. Love coding at the first sight and happy to learn something new especially about programming stuff.</p>
                <div class="text-secondary text-4xl mx-1 mt-2">
                    <i class="fa-solid fa-envelope"></i>
                    <a href="https://github.com/ifaldzi" target="_blank"><i class="fa-brands fa-github"></i></a>
                </div>
            </div>

            <div class="justify-self-center self-center basis-1/3">
                <div class="rounded-full md:border-[10px] border-8 border-[#F2CB05] overflow-hidden mx-auto w-4/5">
                    <img src="./assets/img/profile_2.jpg" alt="">
                </div>
            </div>
        </div>

        <div id="skills" class="mt-20">
            <p class="md:w-1/4 text-primary font-semibold text-center text-2xl mx-auto">Skills</p>
            <p class="w-1/2 text-secondary text-center text-lg mx-auto mt-2">
                These are skills that I got from my journey as a developer.
            </p>

            <div aria-label="Skills slide" class="splide md:px-28 px-0 mt-10">
                <div class="splide__track">
                    <ul class="splide__list ">
                        <% skills.forEach(skill=> { %>
                            <li class="splide__slide w">
                                <div class="text-center">
                                    <img src="./assets/img/<%= skill.image %> " alt="" class="w-1/2  mx-auto">
                                    <p class="text-secondary text-sm mt-3">
                                        <%= skill.name %>
                                    </p>
                                </div>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            </div>
        </div>

        <div id="experiences" class="mt-20 mx-10">
            <p class="md:w-1/4 text-primary font-semibold text-center text-2xl mx-auto mb-10">Experiences</p>

            <% experiences.forEach(experience=> { %>
                <div class="grid md:grid-cols-2 md:gap-10 gap-5 mb-5">
                    <div class="relative md:w-4/5 justify-self-end">
                        <img src="./assets/img/mac-window.png" alt="" class="">
                        <img src="./assets/img/<%= experience.image || 'image-placeholder.jpg'  %> " alt=""
                            class="screen rounded-b-lg bg-white">
                    </div>
                    <div class="self-center">
                        <h3 class="text-title-secondary text-2xl font-bold">
                            <%= experience.header %>
                        </h3>
                        <p class="text-secondary mb-3">
                            <%= experience.date %>
                        </p>
                        <p class="text-secondary mb-3">
                            <%= experience.role %>
                        </p>
                        <p class="text-secondary">
                            <%= experience.description %>
                        </p>
                    </div>
                </div>
                <% }) %>
        </div>

        <div id="works" class="mt-20 mx-10">
            <p class="md:w-1/4 text-primary font-semibold text-center text-2xl mx-auto mb-10">Previous Works</p>

            <div class="grid md:grid-cols-2 grid-cols-1 gap-x-36 gap-y-10">
                <% previousWorks.forEach(work=> { %>
                    <div class="grid">
                        <img src="./assets//img/<%= work.image || 'image-placeholder.jpg' %> " alt=""
                            class="rounded-xl" width="100%">

                        <div class="content-between flex flex-col">
                            <div class="grid grid-flow-col-dense mt-5 text-2xl">
                                <div>
                                    <h3 class="text-title-secondary font-bold">
                                        <%= work.header %>
                                    </h3>
                                    <p class="text-secondary text-lg"><%= work.year %></p>
                                    <div class="flex flex-wrap flex-row gap-2 mt-2">
                                        <% work.tags.forEach(tag => { %>
                                            <span class="rounded-md bg-primary py-1 px-2">
                                                <p class="text-tag text-sm uppercase"><%= tag %></p>
                                            </span>
                                        <% }) %>
                                    </div>
                                </div>
                                <span class="justify-self-end <% if (work.repo_link === null) { %> <%= "link-disabled" %> <% }%>">
                                    <a href="<%= work.repo_link %> " target="_blank"
                                        class="text-4xl">
                                        <i class="fa-brands fa-github"></i>
                                    </a>
                                </span>
                            </div>

                            <p class="text-secondary my-5 text-justify">
                                <%= work.description %>
                            </p>

                            <div class="mt-auto">
                                <p class="text-secondary">Built with:</p>
                                <div class="grid grid-flow-col auto-cols-max gap-x-5 mt-3">
                                    <% work.techs.forEach(tech=> { %>
                                        <div class="group relative w-max flex flex-col items-center">
                                            <img src="./assets/img/<%= tech.image %> " alt="" class="w-10">
                                            <span class="mt-4 absolute z-10 hidden w-max translate-y-full flex-col text-center items-center group-hover:flex rounded bg-dropdown text-gray-100 p-1 text-sm after:content-[''] after:absolute after:left-1/2 after:-top-[50%] after:-translate-x-1/2 after:border-8 after:border-x-transparent after:border-t-transparent after:border-b-[#062C46]">
                                                <%= tech.name %>
                                            </span>
                                        </div>
                                        <% }) %>
                                </div>
                            </div>

                        </div>
                    </div>
                <% }) %>
            </div>
        </div>

        <a href="#" class="fixed bottom-7 right-7 hidden" id="to-top-btn">
            <span class="fa-stack text-2xl">
                <i class="fas fa-circle fa-stack-2x text-primary"></i>
                <i class="fas fa-solid fa-arrow-up fa-stack-1x text-secondary"></i>
            </span>
        </a>

    </div>

    <%- include('footer') %>

    <script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@splidejs/splide-extension-grid@0.4.1/dist/js/splide-extension-grid.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/css/splide.min.css" rel="stylesheet">

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const splide = new Splide('.splide', {
                grid: {
                    rows: 3,
                    cols: 4,
                    gap: {
                        row: '1rem'
                    }
                },
                perMove: 1,
                arrows: false,
                // autoWidth: true,
                breakpoints: {
                    // 1024: {
                    //     grid: {
                    //         rows: 3,
                    //         cols: 4
                    //     },
                    //     gap: {
                    //         row: '1rem'
                    //     }
                    // },
                    640: {
                        grid: {
                            rows: 3,
                            cols: 2,
                        },
                    },
                }
            })
            console.log(splide);
            splide.mount(window.splide.Extensions)
        })

        const navButton = document.getElementById('nav-button')
        const mobileMenu = document.getElementById('mobile-menu')

        navButton.onclick = () => {
            mobileMenu.classList.toggle('h-36')
            mobileMenu.classList.toggle('h-0')
        }

        const toTopBtn = document.getElementById('to-top-btn')

        window.onscroll = () => {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20)
                toTopBtn.style.display = "block"
            else
                toTopBtn.style.display = "none"
        }
    </script>
</body>

</html>
